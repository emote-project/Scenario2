<Window x:Class="EmoteScenario2Gui.CustomDialog.AddModuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="218" Width="541" ResizeMode="NoResize" Title="Add module" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Margin="10,10,10,0" TextWrapping="Wrap" Text="NOTE: make sure you're adding the module path as RELATIVE to the EmoteScenario2Gui.exe" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="Path: " VerticalAlignment="Top"/>
        <TextBox x:Name="txtPath" Height="44" Margin="53,37,56,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,87,0,0" TextWrapping="Wrap" Text="Args: " VerticalAlignment="Top" Height="27"/>
        <TextBox x:Name="txtArgs" Height="55" Margin="53,86,10,0" TextWrapping="Wrap" VerticalAlignment="Top" />
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Right" Margin="0,159,10,0" VerticalAlignment="Top" Width="75" Click="Add_Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,159,90,0" VerticalAlignment="Top" Width="75" Click="Cancel_Button_Click"/>
        <Button Content="Select" HorizontalAlignment="Right" Margin="0,37,10,0" VerticalAlignment="Top" Width="41" Height="44" Click="Select_Button_Click"/>

    </Grid>
</Window>
